.fixed {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1111;
  background-color: #fff;
  border-bottom: 1px solid #e5e5e5;
}
.tab {
  background-color: #fff;
  border-top: 1px solid #e5e5e5;
}
.tab .wuc-tab-item {
  width: 33%;
  text-align: center;
  margin: 0;
}
.tab .wuc-tab-item.select-tab {
  color: #01c2c3;
  border-color: #01c2c3;
}
.count {
